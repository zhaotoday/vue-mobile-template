{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
    "^c-(.*)-(.*)": "@/components/$1/components/$2/index.vue",
    "^c-(.*)": "@/components/$1/index.vue"
  },
  "pages": [
    {
      "path": "pages/home/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/mp/login/index",
      "style": {
        "navigationBarTitleText": "授权登录"
      }
    },
    {
      "path": "pages/user/home/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/user/account-login/index",
      "style": {
        "navigationBarTitleText": "账号登录"
      }
    },
    {
      "path": "pages/user/password/index",
      "style": {
        "navigationBarTitleText": "重置密码"
      }
    },
    {
      "path": "pages/user/phone-number/index",
      "style": {
        "navigationBarTitleText": "绑定手机号"
      }
    },
    {
      "path": "pages/my/info/index",
      "style": {
        "navigationBarTitleText": "我的资料"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#F2F2F2"
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#333333",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home/index",
        "iconPath": "static/tab-bar/home.png",
        "selectedIconPath": "static/tab-bar/home-hl.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/user/account-login/index",
        "iconPath": "static/tab-bar/my.png",
        "selectedIconPath": "static/tab-bar/my-hl.png",
        "text": "我的"
      }
    ]
  }
}
