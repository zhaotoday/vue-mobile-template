{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
    "^c-(.*)": "vue-mobile/components/$1/index.vue"
  },
  "pages": [
    {
      "path": "pages/home/index",
      "style": {
        "navigationBarTitleText": "某某商城",
        "navigationBarTextStyle": "white",
        "navigationBarBackgroundColor": "#5ac725"
      }
    },
    {
      "path": "pages/categories/index",
      "style": {
        "navigationBarTitleText": "分类"
      }
    },
    {
      "path": "pages/mp/login/index",
      "style": {
        "navigationBarTitleText": "授权登录"
      }
    },
    {
      "path": "pages/user/home/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/user/info/index",
      "style": {
        "navigationBarTitleText": "我的资料"
      }
    },
    {
      "path": "pages/user/account-login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/user/account-register/index",
      "style": {
        "navigationBarTitleText": "注册"
      }
    },
    {
      "path": "pages/user/password/index",
      "style": {
        "navigationBarTitleText": "重置密码"
      }
    },
    {
      "path": "pages/user/phone-number/index",
      "style": {
        "navigationBarTitleText": "绑定手机号"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#F2F2F2"
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#333333",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home/index",
        "iconPath": "static/tab-bar/home.png",
        "selectedIconPath": "static/tab-bar/home-selected.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/categories/index",
        "iconPath": "static/tab-bar/category.png",
        "selectedIconPath": "static/tab-bar/category-selected.png",
        "text": "分类"
      },
      {
        "pagePath": "pages/cart/index",
        "iconPath": "static/tab-bar/cart.png",
        "selectedIconPath": "static/tab-bar/cart-selected.png",
        "text": "购物车"
      },
      {
        "pagePath": "pages/user/home/index",
        "iconPath": "static/tab-bar/user.png",
        "selectedIconPath": "static/tab-bar/user-selected.png",
        "text": "我的"
      }
    ]
  }
}
